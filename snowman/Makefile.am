makefiledir=  $(prefix)/etc/stklos
makefile_DATA= etc/Makefile-snow.tmpl

bin_SCRIPTS = stklos-snowman 

SRC     = main.stk add.stk extract.stk parse.stk params.stk repository.stk \
	  snowball.stk misc.stk tune.stk types.stk
SFLAGS  = -l 
RM      = /bin/rm
SCC	= ../utils/stklos-compile

$(bin_SCRIPTS): $(SRC)
	$(SCC) $(SFLAGS) -o $(bin_SCRIPTS) main.stk

clean:
	$(RM) -f $(bin_SCRIPTS) *~

distclean: clean
	$(RM) -f config.stk

